{
  "compilerOptions": {
    /* Projects */

    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "CommonJS",
    "rootDir": "./src",

	"typeRoots": ["./node_modules/@types", "./types"],

	"paths": {
		"types/*": ["./types/*"],
	},

    /* JavaScript Support */

    /* Emit */

    "outDir": "./build",
    "removeComments": true,

    /* Interop Constraints */

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    /* Completeness */

    "skipLibCheck": true,
  }
}
